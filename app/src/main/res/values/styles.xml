<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="LoginPage" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AddButtonStyle">
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
    </style>


    <style name="ProfilPictureStyle">
        <item name="android:textColor">#202020</item>
        <item name="android:radius"> 25dp </item>
        <item name="android:background">#009688</item>

    </style>
    <style name="ProfilNameStyle">
        <item name="android:textColor">#202020</item>
        <item name="android:radius"> 25dp </item>
    </style>
    <style name="ProfilOccupationStyle">
        <item name="android:textColor">#60202020</item>
    </style>
</resources>
